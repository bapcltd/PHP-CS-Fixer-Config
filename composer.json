{
	"name": "bapcltd/php-cs-fixer-config",
	"description": "PHP-CS-Fixer Config",
	"license": "ISC",
	"authors": [
		{
			"name": "SignpostMarv",
			"email": "me@signpostmarv.name"
		}
	],
	"autoload": {
		"psr-4": {
			"BAPC\\CS\\": "src/"
		}
	},
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true
	},
	"conflict": {
		"vimeo/psalm": "<3.11.2"
	},
	"scripts": {
		"tests": [
			"@static-analysis"
		],
		"static-analysis": [
			"phpcpd src",
			"php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
		]
	},
	"require": {
		"php": "^5.5",
		"friendsofphp/php-cs-fixer": "^2.2"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"sebastian/phpcpd": "^2.0"
	}
}
